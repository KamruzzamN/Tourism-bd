                android:text="@string/chittagong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/chittagong"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

